{
    "name": "marketing-toolkit",
    "description": "Marketing Toolkit Embeddings",
    "operator": "kubernetes",
    "variables": [
        {
            "name": "OPENAI_KEY",
            "type": "secret"
        },
        {
            "name": "MONGO_DEFAULT_URL",
            "type": "secret"
        },
        {
            "name": "MONGO_DATA_URL",
            "type": "secret"
        },
        {
            "name": "OPENSEARCH_USERNAME",
            "type": "secret"
        },
        {
            "name": "OPENSEARCH_PASSWORD",
            "type": "secret"
        }
    ],
    "tags": [],
    "tasks": [
        {
            "name": "generate_agent_data",
            "depends_on": [],
            "retries": 2,
            "timeout": "10m",
            "container": {
                "image": "python:3.12-slim",
                "env": [
                    {"name": "OPENAI_KEY", "valueFrom": "OPENAI_KEY"},
                    {"name": "MONGO_DEFAULT_URL", "valueFrom": "MONGO_DEFAULT_URL"},
                    {"name": "MONGO_DATA_URL", "valueFrom": "MONGO_DATA_URL"},
                    {"name": "OPENSEARCH_USERNAME", "valueFrom": "OPENSEARCH_USERNAME"},
                    {"name": "OPENSEARCH_PASSWORD", "valueFrom": "OPENSEARCH_PASSWORD"}
                ],
                "command": [
                    "pip install -r requirements.txt && python main.py"
                ]
            }
        }
    ]
}